{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Products listing specification",
    "properties": {
        "products": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "#/definitions/Product"}
                ]
            }
        }
    },

    "definitions": {
        "Product": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the element. Equivalent to MDID"
                },
                "name": {
                    "type": "string",
                    "description": "Human readable name of the product"
                }
            }
        }
    }
}