{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Sites listing specification",
    "properties": {
        "sites": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "#/definitions/Sites"}
                ]
            }
        }
    },

    "definitions": {
        "Sites": {
            "properties": {
              "name": {
                "type": "string",
                "description": "The Alfresco name used for URL resolution"
              },
              "title": {
                "type": "string",
                "description": "Human readable title for the site"
              },
              "categories": {
                "type": "array",
                "items": {
                  "type": "string",
                  "description": "Category name - sites can be organized in categories, which can be hierarchical"
                }
              }
            }
        }
    }
}