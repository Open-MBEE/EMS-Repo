{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Snapshots listing specification",
    "properties": {
        "snapshots": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {"$ref": "#/definitions/Snapshots"}
                ]
            }
        }
    },

    "definitions": {
        "Snapshots": {
            "properties": {
	            "created": {
	                "type": "string",
	                "format": "date-time",
	                "description": "Last modified time of snapshot"
	            },
	            "creator": {
	                "type": "string",
	                "description": "Username of creator of snapshot"
	            },
	            "id": {
	                "type": "string",
	                "description": "Unique identifier of the element."
	            },
	            "tag": {
	                "type": "string",
	                "description": "Shows associated configuration set, if any"
	            },
                "name": {
                    "type": "string",
                    "description": "Name of the product this is a snapshot for"
                },
                "url": {
                    "type": "string",
                    "description": "URL to the snapshot view"
                }
            }
        }
    }
}