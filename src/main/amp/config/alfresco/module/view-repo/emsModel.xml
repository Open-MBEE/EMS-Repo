<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="ems:emsModel">
    <description>EMS Unique Models</description>
    <author>JPL</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://jpl.nasa.gov/model/view/2.0" prefix="view2"/>
    </imports>
    <namespaces>
        <namespace uri="http://jpl.nasa.gov/model/ems/1.0" prefix="ems"/>
    </namespaces>
    <data-types/>
    <constraints>
    		<constraint name="ems:job_status_constraint" type="LIST">
    			<parameter name="allowedValues">
    				<list>
    					<value>Active</value>
    					<value>Succeeded</value>
    					<value>Failed</value>
    				</list>
    			</parameter>
    		</constraint>
    </constraints>
    <types>      
        <type name="ems:Job">
            <parent>cm:content</parent>
            <properties>
	            	<property name="ems:job_status">
	                	<type>d:text</type>
	                	<mandatory>true</mandatory>
	                	<index enabled="false"/>
	                	<constraints>
	                		<constraint ref="ems:job_status_constraint"/>
	                	</constraints>
                </property>
                <property name="ems:job_log">
	                	<type>d:noderef</type>
	                	<mandatory>false</mandatory>
	                	<multiple>false</multiple>
	                	<index enabled="false"/>
                </property>
            </properties>
            <associations/>
            <overrides/>
            <mandatory-aspects>
	            	<aspect>cm:indexControl</aspect>
	            	<aspect>cm:versionable</aspect>
	            	<aspect>cm:taggable</aspect>
	            	<aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>
        <type name="ems:ConfigurationSet">
            <parent>ems:Job</parent>
            <properties/>
            <associations>
            		<association name="ems:configuredSnapshots">
            			<source>
            				<mandatory>false</mandatory>
            				<many>true</many>
            			</source>
            			<target>
            				<class>view2:Snapshot</class>
            				<mandatory>false</mandatory>
            				<many>true</many>
            			</target>
            		</association>
            		<association name="ems:configuredProducts">
            		  <source>
            		      <mandatory>false</mandatory>
            		      <many>true</many>
            		  </source>
            		  <target>
            		      <class>view2:Product</class>
            		      <mandatory>false</mandatory>
            		      <many>true</many>
            		  </target>
            		</association>
            </associations>
            <overrides/>
            <mandatory-aspects>
                <aspect>view2:timestamped</aspect>
            </mandatory-aspects>
        </type>
     </types>
     <aspects>
         <aspect name="sysml:TreeNode">
            <parent>sysml:HasChildren</parent>
            <properties>
                <property name="sysml:parent">
                    <type>d:noderef</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                    <index enabled="true">
                        <atomic>false</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
            </properties>
        </aspect>
        <aspect name="sysml:HasChildren">
            <properties>
                <property name="sysml:children">
                    <type>d:noderef</type>
                    <mandatory>false</mandatory>
                    <multiple>true</multiple>
                    <index enabled="true">
                        <atomic>false</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
            </properties>
        </aspect>
        <aspect name="sysml:Workspace">
            <parent>sysml:TreeNode</parent>
            <properties>
                <property name="sysml:lastTimeSyncParent">
                    <type>d:datetime</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                    <index enabled="false"/>
                </property>
            </properties>
        </aspect>
        <aspect name="sysml:HasWorkspace">
            <properties>
                <property name="sysml:workspace">
                    <type>d:noderef</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                    <index enabled="false"/>
                </property>
            </properties>
        </aspect>

        <!-- Trashed is to implement a trash can in case we need something that 
             we would lose if deleting from Alfresco -->
        <aspect name="sysml:Trashed"/>
        
        <aspect name="sysml:Added"/>
        <aspect name="sysml:Deleted"/>
        <aspect name="sysml:Moved"/>

        <!-- The merge source is a node that overwrote this one when merged from 
        a child workspace. -->
        <aspect name="sysml:MergeSource">
            <properties>
                <property name="sysml:mergeSource">
                    <type>d:noderef</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                    <index enabled="false"/>
                </property>
            </properties>
        </aspect>
     </aspects>
</model>