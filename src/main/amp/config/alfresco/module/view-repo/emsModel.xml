<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.alfresco.org/model/dictionary/1.0" name="ems:emsModel">
    <description>EMS Unique Models</description>
    <author>JPL</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://jpl.nasa.gov/model/view/2.0" prefix="view2"/>
    </imports>
    <namespaces>
        <namespace uri="http://jpl.nasa.gov/model/ems/1.0" prefix="ems"/>
    </namespaces>
    <data-types/>
    <constraints>
    		<constraint name="ems:job_status_constraint" type="LIST">
    			<parameter name="allowedValues">
    				<list>
    					<value>Active</value>
    					<value>Succeeded</value>
    					<value>Failed</value>
    				</list>
    			</parameter>
    		</constraint>
    </constraints>
    <types>      
        <type name="ems:Job">
            <parent>cm:content</parent>
            <properties>
	            	<property name="ems:job_status">
	                	<type>d:text</type>
	                	<mandatory>true</mandatory>
	                	<index enabled="false"/>
	                	<constraints>
	                		<constraint ref="ems:job_status_constraint"/>
	                	</constraints>
                </property>
                <property name="ems:job_log">
	                	<type>d:noderef</type>
	                	<mandatory>false</mandatory>
	                	<multiple>false</multiple>
	                	<index enabled="false"/>
                </property>
            </properties>
            <associations/>
            <overrides/>
            <mandatory-aspects>
	            	<aspect>cm:indexControl</aspect>
	            	<aspect>cm:versionable</aspect>
	            	<aspect>cm:taggable</aspect>
	            	<aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>
        <type name="ems:ConfigurationSet">
            <parent>ems:Job</parent>
            <properties/>
            <associations>
            		<association name="ems:configuredSnapshots">
            			<source>
            				<mandatory>false</mandatory>
            				<many>true</many>
            			</source>
            			<target>
            				<class>view2:Snapshot</class>
            				<mandatory>false</mandatory>
            				<many>true</many>
            			</target>
            		</association>
            </associations>
            <overrides/>
            <mandatory-aspects/>
        </type>
     </types>
</model>