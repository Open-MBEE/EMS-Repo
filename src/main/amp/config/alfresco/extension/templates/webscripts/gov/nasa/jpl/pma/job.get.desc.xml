<webscript>
	<shortname>get job with {jobId}</shortname>
	<description>
		get job with {jobId}
	</description>
	<url>/workspaces/{workspaceId}/elements/{elementId}/jobs?recurse={recurse?}?depth={depth?}</url>
	<format default="json">argument</format>
	<authentication>user</authentication>
	<transaction>none</transaction>
	<family>PMA REST API</family>
	<args>
	  	<arg>
	  		<name>recurse</name>
	  		<description>Will get all the jobs associated with element</description>
  		</arg>
	  	<arg>
	  		<name>depth</name>
	  		<description>Will choose how many children off the element should be obtained</description>
  		</arg>
	</args>
</webscript>