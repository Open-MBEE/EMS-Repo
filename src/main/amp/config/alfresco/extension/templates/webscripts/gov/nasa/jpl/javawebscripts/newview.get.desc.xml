<webscript>
<shortname>Get View</shortname>
    <description>
    See newview.post.desc.xml for format. 
  	</description>
		<url>/javawebscripts/newviews/{id}?recurse={recurse?}</url>
		<format default="json">any</format>
		<authentication>user</authentication>
		<transaction allow="readonly">required</transaction>
		<family>EMS Java Webscripts</family>
		<args>
			<arg>
				<name>recurse</name>
				<description>Returns children views if true. False by default.</description>
			</arg>
		</args>  		
 </webscript>